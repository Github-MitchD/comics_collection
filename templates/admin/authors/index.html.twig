{% extends 'base_admin.html.twig' %}

{% block title %}Comics Collection - Admin: Les auteurs
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row">
		
			{% include 'admin/_parts/sidebar.html.twig' %}

			<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mb-4 pb-4">
				<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-3 mb-3 border-bottom">
					<h1 class="h2">Les auteurs</h1>
					<div class="btn-toolbar mb-2 mb-md-0">
						<a type="button" href="{{ path('admin_comics_add') }}" class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1 me-2">
							<i class="bi bi-plus-circle"></i>
							Ajouter un comic
						</a>
						<a type="button" href="{{ path('admin_authors_add') }}" class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1">
							<i class="bi bi-plus-circle"></i>
							Ajouter un auteur
						</a>
					</div>
				</div>
				<div class="container mt-4">
					{% for type, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ type == 'success' ? 'primary' : 'danger' }} alert-dismissible fade show m-auto mb-4" role="alert">
								{{ message }}
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						{% endfor %}
					{% endfor %}
				</div>
				<div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-4">
					{% for author in data.authors %}
						<div class="col">
							<a href="{{ path('admin_authors_show', { slug: author.slug }) }}" class="text-decoration-none">
								<div class="card h-100 text-center shadow border-0" style="border-radius:0;border-top-left-radius: 50%;border-top-right-radius: 50%;">
									<img src="{{ author.image }}" class="rounded-circle border border-3 border-secondary mx-auto d-block mt-2" width="140" height="140" alt="...">
									<div class="card-body">
										<h5 class="card-title text-secondary">{{author.name}}</h5>
									</div>
									<div class="card-footer">
										<small class="text-body-secondary">{{author.comicsCount}} Comics</small>
									</div>
								</div>
							</a>
						</div>
					{% endfor %}
				</div>
			</main>
		</div>
	</div>

{% endblock %}
