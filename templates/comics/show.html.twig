{% extends 'base.html.twig' %}

{% block title %}Comics Collection - Les comics
{% endblock %}

{% block body %}
	<div class="container my-4">
		<div class="container bg-light p-4 shadow-sm">
			<div class="row">
				<div class="col-4">
					<img src="{{ data.frontCover }}" class="img-fluid" alt="{{ data.title }}">
				</div>
				<div class="col-8">
					<p class="fs-5 text-uppercase fw-bold text-primary">Collection : {{ data.collection|e }}</p>
					<p class="fs-3">{{ data.title|e }}</p>
					<p class="fs-4"><span class="badge bg-primary">Tome	{{ data.tome|e }}</span></p>
					<p><b>Résumé :</b><br>{{ data.description|e }}</p>
					<hr>
					<h4 class="mb-4">A propos de l'auteur</h4>
					<div class="row g-0">
						<div class="col-md-3">
							<img src="http://localhost:8989/public/uploads/authors/{{ data.author.image }}" class="img-fluid rounded" alt="{{ data.author.name }}">
						</div>
						<div class="col-md-9">
							<div class="card-body">
								<h5 class="card-title">{{ data.author.name|e }}</h5>
								<p class="card-text">{{ data.author.bio|e }}</p>
								<p class="card-text">
									<small class="text-body-secondary">{{ data.author.birthdate|date('d/m/Y') }}</small>
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}