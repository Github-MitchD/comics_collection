{% extends 'base.html.twig' %}

{% block title %}Comics Collection - DÃ©tails d'un auteur
{% endblock %}

{% block body %}
	<div class="container my-4">
		<div class="container bg-light p-4 shadow-sm">
			<div class="row">
				<div class="col-2">
					<img src="http://localhost:8989/public/uploads/authors/{{ data.image }}" class="img-fluid" alt="{{ data.name }}">
				</div>
				<div class="col-10">
					<h2>{{ data.name|e }}</h2>
					<p>Date de naissance :
						{{ data.birthdate|date('d/m/Y') }}</p>
					<p>{{ data.bio|e }}</p>
					<div class="d-flex align-items-center">
						<p class="text-secondary mb-0">plus d'infos</p>
						<i class="bi bi-arrow-right-short text-primary fs-4 ms-2"></i>
						<p class="text-secondary mb-0 ms-2">{{ data.website|e }}</p>
					</div>
				</div>
			</div>
			<hr>
			<h4 class="mb-4">{{ data.comics|length }}
				Comics dans sa liste</h4>
			<div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4 pb-4 mb-2">
				{% for comic in data.comics %}
					<div class="col">
						<div class="card h-100 text-center shadow-sm rounded-0 border-0">
							<a href="{{ path('app_comics_show', {slug: comic.slug}) }}" class="text-decoration-none">
								<img src="http://localhost:8989/public/uploads/comics/{{ comic.frontCover }}" class="card-img-top rounded-0" alt="{{ comic.title }}">
							</a>
							<div class="card-body">
								<h6 class="card-title">{{ comic.title|e }}</h6>
								<h5>
									<span class="badge text-bg-primary">Tome
										{{ comic.tome }}</span>
								</h5>
							</div>
							<div class="card-footer text-center">
								<small class="text-body-secondary">Collection</small><br>
								<a href="{{ path('app_collection', {collection: comic.collection}) }}" class="text-body-light text-dark text-decoration-none">
									<small>{{ comic.collection|e }}</small>
								</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
